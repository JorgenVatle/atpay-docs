$accentColor = #6a57d6
$textColor = #2c3e50
$borderColor = #dbdfe6
$codeBgColor = #282c34
$bgColor = #edf1f7;

html
  background: $bgColor

table tbody,thead
  background: #fff

table tr:nth-child(2n)
  background-color: #f9f9f9;

div[class~="language-php"]:before
  content "php"

div[class~="language-powershell"]:before
  content "ps"

div[class~="language-text"]:before
  content "txt"

div[class~="language-http"]:before
  content "http"

div[class~="language-gradle"]:before
  content "gradle"

div[class~="language-xml"]:before
  content "xml"

div.custom-block.tip
  border-color: $accentColor
